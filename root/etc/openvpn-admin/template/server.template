config openvpn 'myvpn'                       # 定义OpenVPN实例名称为myvpn（核心标识，区分多个VPN实例）
	option proto 'udp6'                        # 指定VPN使用的传输协议+网络类型：UDP协议（高效）+IPv6网络
	option port '1011'                         # VPN服务监听的端口号（客户端需连接此端口）
	option ddns '851020.xyz'                   # VPN服务器的DDNS域名（适配动态公网IP，替代固定IP）
	option dev 'tun'                           # 虚拟网络设备类型：tun（路由模式，三层IP隧道，常用）
	option topology 'subnet'                   # 网络拓扑类型：subnet（子网模式，为每个客户端分配独立IP）
	option server '10.8.0.0 255.255.255.0'     # 为VPN客户端分配的内网网段+子网掩码（客户端IP从10.8.0.2开始分配）
	option compress 'lz4-v2'                   # 启用LZ4-v2算法数据压缩（提升传输速度，降低带宽占用）
	option ca '/etc/openvpn/pki/ca.crt'        # CA根证书路径（用于验证服务器/客户端身份）
	option dh '/etc/openvpn/pki/dh.pem'        # Diffie-Hellman密钥交换文件（加密协商用）
	option cert '/etc/openvpn/pki/server.crt'  # 服务器证书路径（证明服务器身份）
	option key '/etc/openvpn/pki/server.key'   # 服务器私钥路径（加密通信核心）
	option persist_key '1'                     # 持续保留私钥（重连时无需重新读取，提升稳定性）
	option persist_tun '1'                     # 持续保留tun设备（重连时无需重建隧道，减少断连）
	option user 'nobody'                       # 运行OpenVPN进程的系统用户（低权限，降低安全风险）
	option group 'nogroup'                      # 运行OpenVPN进程的用户组（与user配合降低权限）
	option max_clients '10'                      # 允许同时连接的最大客户端数量（限制并发数）
	option keepalive '10 120'                      # 保活机制：每10秒发心跳包，120秒无响应则断开连接
	option verb '3'                                 # 日志详细程度：3（中等，兼顾排查问题和日志大小）
	option status '/var/log/openvpn_status.log'      # VPN连接状态日志路径（记录客户端连接信息）
	option log '/tmp/openvpn.log'                    # OpenVPN运行日志路径（记录进程启停、错误等）
	list push 'route 192.168.100.0 255.255.255.0'   # 推送给客户端：添加访问192.168.100.0/24内网的路由
	list push 'redirect-gateway def1 bypass-dhcp'  # 推送给客户端：所有流量走VPN（全局代理）
	list push 'dhcp-option DNS 192.168.100.10'    # 推送给客户端：使用192.168.100.10作为DNS服务器
	list push 'compress lz4-v2'                   # 推送给客户端：启用同服务器一致的LZ4-v2压缩
	option local '240e:3b0:1609:9d84:bc55:7aa0:642d:b18a'  # 服务器绑定的本地IPv6地址（仅监听此地址）
	option management '127.0.0.1 7505'            # 启用管理接口：监听本地127.0.0.1的7505端口（用于管理VPN）
	option management_forget_disconnect '1'     # 管理接口特性：客户端断开后忘记其连接信息
	option enabled '1'                          # 启用该OpenVPN实例（1=启用，0=禁用，核心开关）
	option client_connect '/etc/openvpn-admin/client-connect-cn.sh'  # 客户端连接时执行的自定义脚本（黑名单）
	option script_security '3'                  # 脚本执行安全级别：3（允许执行任意外部脚本，需谨慎）